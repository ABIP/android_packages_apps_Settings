<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/custom_settings_title">

    <!-- Status bar settings -->
    <PreferenceScreen
        android:key="status_bar"
        android:fragment="com.android.settings.cyanogenmod.StatusBar"
        android:title="@string/status_bar_title" />

    <!-- Dynamic system bars -->
    <header
        android:id="@+id/dynamic_system_bar"
        android:icon="@drawable/ic_settings_dsb"
        android:fragment="com.android.settings.batik.DSBSettings"
        android:title="@string/dynamic_system_bars_title" />

    <!-- Animation Control -->
    <header
        android:id="@+id/interface_animation"
        android:title="@string/interface_animation_title"
        android:breadCrumbTitle="@string/interface_animation_title"
        android:fragment="com.android.settings.batik.interfacesettings.AnimationInterfaceSettings"
        android:icon="@drawable/ic_rom_control_animations" />

</PreferenceScreen>
